# Environment variables for Laune backend
# Rename to .env and update with your values

# General
RUN_MODE=development

# Database settings
DATABASE_URL=postgres://postgres:postgres@localhost:5432/laune_db
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=laune_db
PGHOST=localhost
PGPORT=5432

# OpenAI API Key
LAUNE__OPENAI__API_KEY=your_openai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Alternative way to set the API key

# Log level
RUST_LOG=info,laune_backend=debug,sqlx=warn

# Server settings
LAUNE__SERVER__PORT=8080
LAUNE__SERVER__HOST=127.0.0.1
